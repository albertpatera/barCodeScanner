<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/result_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

    </RelativeLayout>

    <TextView
        android:id="@+id/diplay_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/diplay_icon"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="zadej počet kusů"
        android:textAllCaps="true"
        android:textColor="#99000000"
        android:textSize="45dp"
        android:textStyle="bold">

    </TextView>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="282dp"
        android:layout_height="247dp"
        android:layout_below="@id/diplay_text"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/clors_dis"
        android:paddingBottom="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:padding="0dp">

                <EditText
                    android:id="@+id/enterPocet"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="ks"
                    android:inputType="number"
                    android:textAllCaps="true"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/barcode_rawValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#99000000"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:textAllCaps="false"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:background="@drawable/clors_btn"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_operate"
        android:layout_width="188dp"
        android:layout_height="36dp"
        android:text="Button" />

    <TextView
        android:id="@+id/displayTextPLU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="#F44336"
        android:textSize="34sp" />

</RelativeLayout>